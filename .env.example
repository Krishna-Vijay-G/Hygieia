# ============================================================
# Hygieia Environment Configuration Template
# ============================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================
# APPLICATION SETTINGS
# ============================================================
NODE_ENV=development
# NODE_ENV=production

# Application URLs - Local Network Only
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
LOCAL_IP=127.0.0.1

# ============================================================
# BACKEND CONFIGURATION (Python/Flask)
# ============================================================

# Secret keys - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# JWT Token Expiration (seconds)
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000
DEBUG=True

# ============================================================
# DATABASE CONFIGURATION (Supabase PostgreSQL)
# ============================================================

# Option 1: Full connection URL (recommended for Supabase)
DATABASE_URL=postgresql://username:password@host:port/database

# Option 2: Individual connection parameters (alternative)
# DB_HOST=your-db-host
# DB_PORT=5432
# DB_NAME=your-db-name
# DB_USER=your-db-user
# DB_PASSWORD=your-db-password

# ============================================================
# SUPABASE CONFIGURATION
# ============================================================

# Supabase Project URL (from Settings > API)
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anonymous Key (from Settings > API)
SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (from Settings > API) - KEEP SECRET!
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ============================================================
# FRONTEND CONFIGURATION (Next.js/React)
# ============================================================

# Public variables (exposed to browser)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# App metadata
NEXT_PUBLIC_APP_NAME=Hygieia
NEXT_PUBLIC_APP_DESCRIPTION=AI-Powered Medical Diagnostic Platform

# ============================================================
# OPTIONAL: AI SERVICES (Dr. Hygieia Chat)
# ============================================================

# OpenAI API Key (required for Dr. Hygieia AI chat)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# OpenAI Model (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# ============================================================
# OPTIONAL: FILE STORAGE
# ============================================================

# Supabase Storage Bucket for medical images
SUPABASE_STORAGE_BUCKET=medical-images

# Maximum upload size in bytes (16MB)
MAX_UPLOAD_SIZE=16777216

# ============================================================
# OPTIONAL: EMAIL SERVICE (for verification)
# ============================================================

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@hygieia.com

# ============================================================
# OPTIONAL: ANALYTICS
# ============================================================

# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token